<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/country_fragment_land"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:theme="@style/Theme.Assignment2.NoActionBar"
	tools:context=".CountryFragment">

	<TextView
		android:id="@+id/you_selected"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="52dp"
		android:layout_marginBottom="39dp"
		android:text="@string/you_selected"
		android:textSize="50dp"
		app:layout_constraintBottom_toTopOf="@+id/country1"
		app:layout_constraintEnd_toStartOf="@+id/statName"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/toolbar" />

	<TextView
		android:id="@+id/statName"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="9dp"
		android:layout_marginEnd="229dp"
		android:layout_marginBottom="9dp"
		android:text="@string/placeholder"
		android:textSize="25dp"
		app:layout_constraintBottom_toBottomOf="@+id/you_selected"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/you_selected"
		app:layout_constraintTop_toTopOf="@+id/you_selected" />

	<TextView
		android:id="@+id/country1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="27dp"
		android:layout_marginEnd="158dp"
		android:layout_marginBottom="8dp"
		android:textSize="25dp"
		app:layout_constraintBottom_toTopOf="@+id/button2"
		app:layout_constraintEnd_toStartOf="@+id/stat1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/you_selected" />

	<TextView
		android:id="@+id/country2"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="27dp"
		android:layout_marginEnd="158dp"
		android:layout_marginBottom="96dp"
		android:textSize="25dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/stat2"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/stat1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="7dp"
		android:layout_marginEnd="246dp"
		android:layout_marginBottom="8dp"
		android:textSize="20dp"
		app:layout_constraintBottom_toTopOf="@+id/button2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/country1"
		app:layout_constraintTop_toTopOf="@+id/country1" />

	<TextView
		android:id="@+id/stat2"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="75dp"
		android:layout_marginBottom="68dp"
		android:textSize="20dp"
		app:layout_constraintBottom_toTopOf="@+id/apiInfo"
		app:layout_constraintEnd_toStartOf="@+id/button2"
		app:layout_constraintStart_toEndOf="@+id/country2"
		app:layout_constraintTop_toBottomOf="@+id/button2" />

	<Button
		android:id="@+id/button2"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="16dp"
		android:onClick="goBack"
		android:text="@string/back"
		app:layout_constraintBottom_toTopOf="@+id/stat2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/stat2"
		app:layout_constraintTop_toBottomOf="@+id/country1" />

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="729dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="9dp"
		android:background="?attr/colorPrimary"
		android:minHeight="?attr/actionBarSize"
		android:theme="?attr/actionBarTheme"
		app:layout_constraintBottom_toTopOf="@+id/you_selected"
		app:layout_constraintEnd_toStartOf="@+id/statName"
		app:layout_constraintStart_toStartOf="@+id/statName"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/apiInfo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginBottom="16dp"
		android:autoLink="web"
		android:gravity="center"
		android:text=""
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/stat2" />
</androidx.constraintlayout.widget.ConstraintLayout>